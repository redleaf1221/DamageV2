<Window x:Class="DamageV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DamageV2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="640" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,0">
        <Menu Height="16" VerticalAlignment="Top" Margin="0,0,0,0">
            <MenuItem x:Name="About" Header="About" Click="About_Click"/>
        </Menu>
        <Button x:Name="ChangeVersion" Content="Current Version: 1.8" HorizontalAlignment="Right" Height="20" Margin="0,16,320,0" VerticalAlignment="Top" Width="320" Click="ChangeVersion_Click"/>
        <Button x:Name="ChangeMode" Content="Current Mode: Average Damage" HorizontalAlignment="Right" Height="20" Margin="0,16,0,0" VerticalAlignment="Top" Width="320" Click="ChangeMode_Click"/>
    </Grid>
</Window>
